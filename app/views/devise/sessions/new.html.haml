#main.pure-u
  .content

    - flash.each do |name, msg|
      = content_tag :div, msg, :id => "flash_#{name}", :class => "error" if msg.is_a?(String)

    = simple_form_for resource, :wrapper => :pure, :as => resource_name, :url => session_path(resource_name), :html => {:class => "pure-form pure-form-aligned"} do |f|
      %fieldset
        %legend Sign in

        = f.input :email, :autofocus => true
        = f.input :password
        
        .pure-controls
          = f.button :button, 'Sign in', :class => "pure-button-primary"