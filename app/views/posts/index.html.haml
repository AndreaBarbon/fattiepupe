#main.pure-u
  .content

    = render 'shared/navigation'
    = render 'shared/error'
      
    %h2 Listing posts

    .pure-controls
      = link_to 'New Post', new_post_path, :class => "pure-button pure-button-primary"

    %br
      
    %table.pure-table
      %thead
        %tr
          %th Image
          %th Title
          %th Author
          %th
          %th
          %th

      - @posts.each do |post|
        %tr
          %td= link_to image_tag(post.photo.url(:thumb), style:"width:100px"), post
          %td
            %p
              = link_to post.title, post
            %p
              = link_to "0 Comments and 0 Reactions", "/home/#{post.id}#disqus_thread", style:"font-size:75%;"
          %td= post.author
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

    %h2 Users
    %table.pure-table
      %thead
        %tr
          %th Name
          %th View
      - @users.each do |user|
        %tr
          %td= user.name
          %td #{link_to "X", user}
