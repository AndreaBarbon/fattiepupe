#main.pure-u
  .content

    = render 'shared/navigation'

    - flash.each do |name, msg|
      - if msg.is_a?(String)
        = content_tag :div, msg, :id => "flash_#{name}", :class => "error"

    %h2 Listing posts

    %table.pure-table
      %thead
        %tr
          %th Name
          %th Title
          %th Content
          %th Image
          %th
          %th
          %th

      - @posts.each do |post|
        %tr
          %td= post.name
          %td= post.title
          %td= post.content
          %td= post.image
          %td= link_to 'Show', post
          %td= link_to 'Edit', edit_post_path(post)
          %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }

    = link_to 'New Post', new_post_path


    %h2 Users
    %table.pure-table
      %thead
        %tr
          %th Name
          %th View
      - @users.each do |user|
        %tr
          %td= user.name
          %td #{link_to "X", user}
